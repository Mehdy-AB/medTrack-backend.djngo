# Dockerfile for RabbitMQ Consumer Workers
FROM python:3.12-slim

WORKDIR /app

# Install dependencies
RUN pip install --no-cache-dir \
    pika==1.3.2

# Copy consumer scripts
COPY comm-service-consumer.py .
COPY profile-service-consumer.py .

# Run consumer (specified in docker-compose command)
CMD ["python", "comm-service-consumer.py"]
